<%= form_with url: posts_path, method: :get, local: true do |form| %>
  <div class="input-group mb-3">
    <%= form.label :name, "名前", class: "mr-2" %>
    <%= form.text_field :name, class: "form-control", placeholder: "名前を入力" %>
    
    <%= form.label :relationship, "関係性", class: "ml-4 mr-2" %>
    <%= form.select :relationship, Post.relationships.keys.map { |r| [r, r] }, { include_blank: '選択してください' }, class: "form-control" %>
    
    <%= form.submit "検索", class: "btn btn-primary ml-4" %>
  </div>
<% end %>
