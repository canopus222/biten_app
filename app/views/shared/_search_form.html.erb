<%= form_with url: posts_path, method: :get, local: true do |form| %>
  <div class="flex justify-center mb-3"> <!-- Flexboxの設定 -->
    <div class="mr-4"> <!-- 説明のためのラッパー -->
      <%= form.label :name, "美点発見した人の名前", class: "block text-sm font-medium text-gray-700 " %> <!-- 説明を追加 -->
      <%= form.text_field :name, class: "input input-bordered w-full max-w-xs", placeholder: "名前を入力" %>
    </div>
    
    <div class="mr-4"> <!-- 説明のためのラッパー -->
      <%= form.label :relationship, "関係性", class: "block text-sm font-medium text-gray-700" %> <!-- 説明を追加 -->
      <%= form.select :relationship, Post.relationships.keys.map { |r| [r, r] }, { include_blank: '選択してください' }, class: "input input-bordered w-full max-w-xs" %>
    </div>
    
    <%= form.submit "検索", class: "btn btn-primary ml-4" %>
  </div>
<% end %>
