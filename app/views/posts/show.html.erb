<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6 text-center">美点詳細</h1>
    
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">相手の名前</h2>
      <p class="w-full p-2 border rounded"><%= @post.name %></p>
    </div>
    
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">関係</h2>
      <p class="w-full p-2 border rounded min-h-[100px]"><%= @post.relationship %></p>
    </div>

    <!-- 美点を表示する部分 -->
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">美点</h2>
      <ul class="w-full p-2 border rounded">
        <% (1..10).each do |i| %>
          <li class="mb-2">
            <%= @post.send("virtue_#{i}") %>
          </li>
        <% end %>
      </ul>
    </div>
    
    <div class="text-right text-sm text-gray-500 mb-6">
      投稿日時: <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </div>
    
    <div class="flex justify-between">
      <%= link_to "戻る", :back, class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-3 px-6 rounded text-lg" %>
      <% if @post.user == current_user %>
        <%= button_to "削除", post_path(@post), method: :delete, data: { confirm: "削除しますか？" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-6 rounded text-lg" %>
      <% end %>
    </div>
  </div>
</div>
