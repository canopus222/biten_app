<h1 class="text-3xl font-bold text-center mb-6">美点詳細</h1>
<div class="max-w-md mx-auto p-6 bg-sky-200 rounded-lg shadow-lg">

    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">美点発見した人の名前</h2>
      <p class="w-full p-2 text-gray-700">
        <%= @post.name %>
      </p>
      <div class="border-t border-dotted border-gray-400 mt-2"></div> <!-- 罫線 -->
    </div>

    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">関係</h2>
      <p class="w-full p-2 text-gray-700">
        <%= @post.relationship %>
      </p>
      <div class="border-t border-dotted border-gray-400 mt-2"></div> <!-- 罫線 -->
    </div>

    <!-- 美点を表示する部分 -->
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">美点</h2>
      <ul class="w-full p-2 text-gray-700">
        <% (1..10).each do |i| %>
          <li class="mb-2">
            <%= @post.send("virtue_#{i}") %>
          </li>
          <div class="border-t border-dotted border-gray-400 mt-2"></div> <!-- 罫線 -->
        <% end %>
      </ul>
    </div>

    <div class="text-right text-sm text-gray-500 mb-6">
      投稿日時: <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </div>

    <div class="flex justify-between">
      <%= link_to "戻る", posts_path, class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-3 px-6 rounded text-lg" %>
      <% if @post.user == current_user %>
        <%= button_to "削除", post_path(@post), method: :delete, data: { confirm: "削除しますか？" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-6 rounded text-lg" %>
      <% end %>
    </div>
</div>
