<% content_for :head do %>
  <title>美点一覧</title>
<% end %>

<div class="w-5/6 mx-auto max-w-screen-xl">
  <h1 class="text-4xl md:text-5xl font-bold mb-10 pb-4 border-b-4 border-dashed border-accent text-center">
    美点一覧
  </h1>

  <!-- 検索フォーム -->
  <form>
    <div class="input-group mb-3">
      <input class="form-control" placeholder="検索ワード" type="search"/>
      <div class="input-group-append">
        <input type="submit" value="検索" class="btn btn-primary"/>
      </div>
    </div>
  </form>

  <!-- 投稿一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-4">
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <%= render 'posts/post', post: post %> <!-- 部分テンプレートを呼び出す -->
      <% end %>
    <% else %>
      <div class="mb-3">投稿がありません</div>
    <% end %>
  </div>

  <!-- ページネーション -->
  <div class="my-10">
    <%= paginate @posts %>
  </div>
</div>
