<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <!-- 手帳の背景 -->
  <div class="relative w-[90%] max-w-2xl bg-base-300 p-8 rounded-lg shadow-2xl before:absolute before:inset-0 before:bg-gray-200 before:rounded-lg before:border-4 before:border-dashed before:border-gray-300 before:-z-10">
    <!-- 投稿フォーム -->
    <div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg">
      <h1 class="text-3xl font-bold text-center mb-6">新しい投稿</h1>
      <%= form_with(model: @post) do |form| %>
        <div class="mb-4">
          <%= form.label :name, class: 'label' %>
          <%= form.text_field :name, required: true, class: 'input input-bordered w-full' %>
        </div>

        <div class="mb-4">
          <%= form.label :relationship, class: 'label' %>
          <%= form.select :relationship, Post.relationships.keys.map { |key| [key.humanize, key] }, { prompt: '選択してください' }, required: true, class: 'select select-bordered w-full' %>
        </div>

        <% 10.times do |i| %>
          <div class="mb-4">
            <%= form.label "virtue_#{i + 1}", "美点 #{i + 1}", class: 'label' %>
            <%= form.text_field "virtues[]", value: @post.virtues[i], required: true, class: 'input input-bordered w-full' %>
          </div>
        <% end %>

        <%= form.submit '投稿する', class: 'btn btn-primary w-full' %>
      <% end %>
    </div>
  </div>
</div>
