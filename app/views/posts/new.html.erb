<h1 class="text-3xl font-bold text-center mb-6">新しい投稿</h1>
<div class="max-w-md mx-auto p-6 bg-lime-400 rounded-lg shadow-lg">
  <%= form_with(model: @post) do |form| %>

    <% if @post.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: 'label' %>
      <%= form.text_field :name, required: true, class: 'input input-bordered w-full' %>
    </div>

    <div class="mb-4">
      <%= form.label :relationship, class: 'label' %>
      <%= form.select :relationship, Post.relationships.keys.map { |key| [key.humanize, key] }, { prompt: '選択してください' }, required: true, class: 'select select-bordered w-full' %>
    </div>

    <% 10.times do |i| %>
      <div class="mb-4">
        <%= form.label "virtue_#{i + 1}", "美点#{i + 1}", class: 'label' %>
        <%= form.text_field "virtue_#{i + 1}", required: true, class: 'input input-bordered w-full' %>
      </div>
    <% end %>

    <div class="mb-6">
      <%= form.submit '投稿する', class: 'btn btn-primary w-full' %>
    </div>
  <% end %>
</div>
